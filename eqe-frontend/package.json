{
  "name": "eqe-pro-frontend",
  "private": true,
  "version": "1.0.0",
  "main": "electron.cjs",
  "description": "EQE Energy Simulation Desktop Application",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently \"npm run start-vite\" \"npm run electron-dev\"",
    "build": "npm run build-vite && npm run electron-build",
    "start-vite": "vite",
    "build-vite": "vite build",
    "electron-dev": "wait-on tcp:5173 && electron .",
    "electron-build": "electron-builder --dir",
    "dist": "npm run build-vite && electron-builder",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "build": {
    "appId": "com.omerkaya.eqepro",
    "productName": "EQE PRO",
    "compression": "normal",
    "files": [
      "dist/**/*",
      "electron.cjs",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist_electron"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false
    },
    "win": {
      "target": "nsis"
    }
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.12.7"
  },
  "devDependencies": {
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-legacy": "^5.3.2",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^29.2.0",
    "electron-builder": "^24.13.3",
    "electron-is-dev": "^3.0.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "terser": "^5.30.3",
    "vite": "^5.2.0",
    "wait-on": "^7.1.0"
  }
}